@model HotelReservationSystem.Models.LayoutViewModel

@{
    ViewData["Title"] = "Reservation Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hotel Bootcamp</title>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HotelReservationSystem.styles.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <section class="py-5">
        <div class="container text-center">
            <h2 class="mb-4">Rooms Type</h2>
            <div class="row">
                @foreach (var room in Model.Rooms)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <img src="img/@(room.RoomType.ToLower()).png" class="card-img-top" alt="@room.RoomType Rooms">
                            <div class="card-body">
                                <h5 class="card-title">@room.RoomType - @room.RoomNumber</h5>
                                <p class="card-text">Experience the ultimate in luxury with our well-appointed rooms.</p>
                                <button class="btn btn-primary btn-book"
                                        data-customerid="@Model.CustomerId"
                                        data-room-number="@room.RoomNumber"
                                        data-room-id="@room.RoomId"
                                        data-room-type="@room.RoomType">
                                    Book Now
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- Modal -->
    <div class="modal fade" id="reservationModal" tabindex="-1" aria-labelledby="reservationModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="reservationModalLabel">Add Reservation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="reservationForm" method="post">
                        <div class="form-group">
                            <label for="roomNumber">Room Number</label>
                            <input type="hidden" class="form-control" id="roomId" name="RoomId" readonly>
                            <input type="text" class="form-control" id="roomNumber_md" name="RoomNumber" readonly>
                        </div>
                        <div class="form-group">
                            <label for="roomType">Room Type</label>
                            <input type="text" class="form-control" id="roomType" name="roomType" readonly>
                        </div>
                        @* <div class="form-group">
                        <label for="nama">Nama</label>
                        <input type="text" class="form-control" id="nama" name="nama" readonly>
                        </div> *@
                        <div class="form-group">
                            <label for="dateCheckin">Check-in Date</label>
                            <input type="date" class="form-control" id="dateCheckin" name="CheckInDate" required>
                        </div>
                        <div class="form-group">
                            <label for="dateCheckout">Check-out Date</label>
                            <input type="date" class="form-control" id="dateCheckout" name="CheckOutDate" required>
                        </div>
                        <input type="hidden" id="roomId" name="RoomId">
                        <input type="hidden" id="customerId" name="CustomerId" value="@Model.CustomerId">
                        <input type="hidden" id="status" name="Status" value="Pending">
                        <div class="alert alert-danger d-none" id="reservationError"></div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="saveReservationBtn">Save changes</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(".btn-book").on("click", function () {
            var customerid = $(this).data('customerid');
            var roomId = $(this).data('room-id');
            var roomNumber = $(this).data('room-number');
            var roomType = $(this).data('room-type');
            console.log(roomId);
            $("#reservationModal").modal('show');
            $("#roomNumber_md").val(roomNumber);
            $("#roomId").val(roomId);
            $("#roomType").val(roomType);
            $("#nama").val(customerid);
        });

        $('#saveReservationBtn').on('click', function () {
            var formData = $('#reservationForm').serialize();

            $.ajax({
                url: '@Url.Action("AddReservation", "Reservation")',
                type: 'POST',
                data: formData,
                success: function (response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        $('#reservationError').text(response.message).removeClass('d-none');
                    }
                },
                error: function () {
                    $('#reservationError').text("An error occurred while saving the reservation.").removeClass('d-none');
                }
            });
        });
    </script>

</body>
</html>
